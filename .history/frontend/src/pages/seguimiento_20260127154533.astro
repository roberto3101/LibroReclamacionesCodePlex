// Guardar en sessionStorage
  function guardarEstadoSeguimiento() {
    if (reclamoActual) {
      sessionStorage.setItem('seguimiento_data', JSON.stringify(reclamoActual));
    }
  }

 // Cargar desde sessionStorage SOLO SI VENIMOS DE RELOAD
  window.addEventListener('DOMContentLoaded', () => {
    const isReload = sessionStorage.getItem('is_reload');
    const savedData = sessionStorage.getItem('seguimiento_data');
    
    if (isReload === 'true' && savedData) {
      try {
        reclamoActual = JSON.parse(savedData);
        mostrarResultado(reclamoActual);
      } catch (e) {
        console.error('Error cargando datos guardados');
      }
