        <!-- Cabecera del Reclamo -->
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
          <div id="header-estado" class="p-6 text-white">
            <div
              class="flex flex-col md:flex-row md:items-center md:justify-between gap-4"
            >
              <div>
                <p class="text-sm opacity-80 mb-1">C√≥digo de Reclamo</p>
                <h2 id="resultado-codigo" class="text-2xl font-bold">
                  CODEPLEX-2026-00000
                </h2>
              </div>
              <div class="text-left md:text-right">
                <p class="text-sm opacity-80 mb-1">Estado Actual</p>
                <span
