            <span class="font-semibold text-gray-900">${formatTipoAccion(item.tipo_accion)}</span>
            <span class="text-xs text-gray-500">${formatDateTime(item.fecha_accion)}</span>
          </div>
          ${
            item.estado_anterior && item.estado_nuevo
              ? `
            <p class="text-sm text-gray-600">
              <span class="inline-block px-2 py-1 rounded text-xs bg-gray-200">${item.estado_anterior}</span>
              ‚Üí
              <span class="inline-block px-2 py-1 rounded text-xs bg-blue-100 text-blue-800">${item.estado_nuevo}</span>
            </p>
          `
              : ""
          }
          ${item.comentario ? `<p class="text-sm text-gray-700 mt-2">${item.comentario}</p>` : ""}
          <p class="text-xs text-gray-400 mt-2">Por: ${item.usuario_accion || "Sistema"}</p>
        </div>
      </div>
    `,
      )
      .join("");
  }

  // Render mensajes
  function renderMensajes(mensajes: any[]) {
    const container = document.getElementById("mensajes-container");
    const seccion = document.getElementById("seccion-mensajes");
    if (!container || !seccion) return;

    if (mensajes.length === 0) {
      seccion.classList.add("hidden");
      return;
    }

    seccion.classList.remove("hidden");
    container.innerHTML = mensajes
      .map(
        (msg) => `
      <div class="p-4 rounded-lg ${msg.tipo_mensaje === "CLIENTE" ? "bg-purple-50 border-l-4 border-purple-400" : "bg-blue-50 border-l-4 border-blue-400"}">
        <div class="flex justify-between items-start mb-2">
          <span class="font-semibold text-sm ${msg.tipo_mensaje === "CLIENTE" ? "text-purple-700" : "text-blue-700"}">
            ${msg.tipo_mensaje === "CLIENTE" ? "üë§ Usted" : "üè¢ CODEPLEX"}
          </span>
          <span class="text-xs text-gray-500">${formatDateTime(msg.fecha_mensaje)}</span>
        </div>
        <p class="text-gray-800 whitespace-pre-line">${msg.mensaje}</p>
      </div>
    `,
      )
      .join("");
  }

